#!/usr/bin/env ruby
board=[" "," "," "," "," "," "," "," "," "]
puts "Welcome to Tic-tac-Toe!"
display_board(board)
puts "Please enter 1-9:"
value=gets.strip
index=input_to_index(value)
until valid_move?(board,index)
    if valid_move?(board,index)
       move(board,index,value='X')
       display_board(move)
    else
      puts "Invalid position reenter the value"
      value=gets.strip
      index=input_to_index(value)
    end
end
